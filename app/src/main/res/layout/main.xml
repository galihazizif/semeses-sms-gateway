<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rempoah.ojekbeb.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_reg_id"
        android:text="Registration Token" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_reg_id"
        android:editable="false"
        android:text="-"
        android:textIsSelectable="true"
        android:layout_below="@id/label_reg_id"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_below="@id/et_reg_id"
        android:id="@+id/btnRegister"
        android:text="Register"
        android:selectAllOnFocus="true"
        android:visibility="invisible"
        android:layout_height="wrap_content" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textOn="ON"
        android:textOff="OFF"
        android:id="@+id/on_off_switch"
        android:layout_below="@+id/et_reg_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Jika Semeses dinonaktifkan, request pengiriman SMS akan diabaikan"
        android:id="@+id/textView"
        android:layout_below="@+id/on_off_switch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>